{% extends "base.j2" %}

{% block js %}
{{ super() }}
<script type="text/javascript" src="{{ media_url('js/swfobject.js') }}"></script>
<script type="text/javascript">
<!--
swfobject.addDomLoadEvent(function() {
  swfobject.embedSWF(
					"tags_cloud.swf", "TAGS_CLOUD",
					"500", "500",
					"10", "expressInstall.swf",
					{
						cloud_data:"tags_data.xml",
						tcolor:"0x999999",
						tcolor2:"0x666666",
						hicolor:"0x494949",
						tspeed:"150",
						fontFace:"Times New Roman"
					},
					{wmode: "transparent", menu: "false", quality: "best"}
					);
});
//-->
</script>

{% endblock js %}
{% block content %}

<div class="popover-content">
  <div class="content">
    {% block main %}

    {% for tag in resource.meta.tags %}
    <a href="{{ tag.url }}" style="font-size: {{ tag.font }}pt;">
      [ {{ tag.name }} ]
    </a> : {{ tag.count }}
    {% endfor %}

    {% endblock main %}
  </div>
</div>

<div  style="width:450px; height:500px; float:left;">
  <div id="TAGS_CLOUD">
    <h1>Alternative content</h1>
    <p><a href="http://www.adobe.com/go/getflashplayer"><img src="http://www.adobe.com/images/shared/download_buttons/get_flash_player.gif" alt="Get Adobe Flash player" /></a></p>
  </div>
</div>
{% endblock content %}
